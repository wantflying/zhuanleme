/* pages/index/index.wxss */

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.current-time {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-family: 'Courier New', monospace;
}

/* 独立时间显示（移动到收益卡片之后） */
.current-time.standalone {
  text-align: right;
  color: rgba(255, 255, 255, 0.95);
  margin: 10rpx 0 20rpx;
}

.settings-btn {
  font-size: 36rpx;
  padding: 10rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

/* 收益卡片 */
.income-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.85));
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.income-content {
  text-align: center;
}

.income-time {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.income-amount {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  min-height: 100rpx;
}

.currency {
  font-size: 48rpx;
  font-weight: bold;
  color: #2e8b57;
  margin-right: 10rpx;
}

.amount {
  font-size: 64rpx;
  font-weight: bold;
  color: #2e8b57;
  font-family: 'Courier New', monospace;
}

/* 时间已调整到金额上方 */

.income-simple-info {
  text-align: center;
  padding-top: 20rpx;
}

.simple-label {
  font-size: 24rpx;
  color: #999;
  opacity: 0.8;
}

/* 导航网格 */
.nav-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.nav-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.nav-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.nav-icon {
  font-size: 64rpx;
  margin-bottom: 15rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.nav-desc {
  font-size: 24rpx;
  color: #666;
}

/* 统计部分 */
.stats-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 设置面板 */
.settings-panel {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.settings-panel.show {
  opacity: 1;
  visibility: visible;
}

.settings-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.settings-panel.show .settings-content {
  transform: translateY(0);
}

.settings-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.settings-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #666;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.settings-body {
  flex: 1;
  padding: 40rpx;
  max-height: 60vh;
}

.setting-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.setting-item {
  display: flex;
  flex-direction: column;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f8f9fa;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.picker-display {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background: white;
  box-sizing: border-box;
  text-align: left;
  line-height: 80rpx;
  display: flex;
  align-items: center;
}

.picker-display.danger {
  border-color: #ff6b6b;
  color: #c0392b;
}

.import-textarea {
  width: 100%;
  min-height: 200rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.settings-footer-inline {
  display: flex;
  gap: 20rpx;
  margin-top: 15rpx;
}

.settings-footer-inline .setting-btn {
  flex: 1;
}

.setting-help {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.setting-help text {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.setting-help text:last-child {
  margin-bottom: 0;
}

.settings-footer {
  padding: 40rpx;
  border-top: 2rpx solid #f0f0f0;
}

.setting-btn {
  width: 100%;
  padding: 25rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.setting-btn.primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.setting-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 动画效果增强 */
.income-amount.pulse {
  animation: pulse 1s ease-in-out;
}

.income-amount.glow {
  animation: glow 1s ease-in-out;
}

.income-amount.shake {
  animation: shake 0.5s ease-in-out;
}

.income-amount.blink {
  animation: blink 0.5s ease-in-out;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

@keyframes glow {
  0%, 100% { 
    text-shadow: 0 0 5rpx rgba(46, 139, 87, 0.5);
  }
  50% { 
    text-shadow: 0 0 20rpx rgba(46, 139, 87, 0.8), 0 0 30rpx rgba(46, 139, 87, 0.6);
  }
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

