/* components/odometer/index.wxss */
.odometer-container {
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'Courier New', 'Monaco', monospace;
  font-weight: bold;
}

.odometer-prefix {
  font-size: 48rpx;
  color: #333;
  margin-right: 10rpx;
}

.odometer-digits {
  display: flex;
  align-items: center;
}

.odometer-digit {
  position: relative;
  overflow: hidden;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  margin: 0 2rpx;
  background: linear-gradient(135deg, #f5f5f5, #fff);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.odometer-digit.decimal-point {
  border: none;
  background: none;
  box-shadow: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.decimal-point-text {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.digit-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.digit-roller {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.digit-item {
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.digit-item.digit-current {
  color: #2e8b57;
  background: rgba(46, 139, 87, 0.1);
}

/* 动画效果 */
.odometer-digit.animating .digit-roller {
  animation: rollUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes rollUp {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-100%);
  }
  100% {
    transform: translateY(0);
  }
}

/* 像素风主题 */
.theme-pixel .odometer-container {
  font-family: 'Consolas', 'Monaco', monospace;
}

.theme-pixel .odometer-digit {
  border: 4rpx solid;
  border-radius: 0;
  box-shadow: 4rpx 4rpx 0;
}

.theme-pixel-mint .odometer-digit {
  border-color: #4ecdc4;
  background: #a8e6cf;
  box-shadow: 4rpx 4rpx 0 #4ecdc4;
}

.theme-pixel-mint .digit-item.digit-current {
  color: #2d5016;
  background: rgba(45, 80, 22, 0.2);
}

.theme-pixel-sunset .odometer-digit {
  border-color: #ff6b6b;
  background: #ffe66d;
  box-shadow: 4rpx 4rpx 0 #ff6b6b;
}

.theme-pixel-sunset .digit-item.digit-current {
  color: #8b0000;
  background: rgba(139, 0, 0, 0.2);
}

.theme-pixel-grape .odometer-digit {
  border-color: #9b59b6;
  background: #e8d5ff;
  box-shadow: 4rpx 4rpx 0 #9b59b6;
}

.theme-pixel-grape .digit-item.digit-current {
  color: #4a148c;
  background: rgba(74, 20, 140, 0.2);
}
